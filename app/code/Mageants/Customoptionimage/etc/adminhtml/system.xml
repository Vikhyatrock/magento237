<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <tab id="mageants" translate="label" sortOrder="10">
            <label>Mageants</label>
        </tab>
        <section id="customoption" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Custom Option Image</label>
            <tab>mageants</tab>
            <resource>Mageants_Customoptionimage::config</resource>
            <group id="Customoptionimage" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="Enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="frontend_view" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Frontend View</label>
                <field id="Dropdown" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Drop-down Option View</label>
                        <source_model>Mageants\Customoptionimage\Model\Config\Source\View</source_model>
                </field>
                <field id="Multiple" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Multiple Select Option View</label>
                        <source_model>Mageants\Customoptionimage\Model\Config\Source\View</source_model>
                </field>
                <field id="Radiobutton" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Radio Button Option View</label>
                        <source_model>Mageants\Customoptionimage\Model\Config\Source\View</source_model>
                </field>
                <field id="Checkbox" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Checkbox Option View</label>
                        <source_model>Mageants\Customoptionimage\Model\Config\Source\View</source_model>
                </field>
            </group> 
            <group id="image_size" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Image Size Settings</label>
                <field id="Dropdown_y" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Drop-down Option Image Height</label>
                    <validate>validate-number</validate>
                </field>
                <field id="Dropdown_x" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Drop-down Option Image Width</label>
                    <validate>validate-number</validate>
                </field>
                <field id="Radio_y" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Radio Buttons Option Image Height</label>
                    <validate>validate-number</validate>
                </field>
                <field id="Radio_x" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Radio Buttons Option Image Width</label>
                    <validate>validate-number</validate>
                </field>
                <field id="Checkbox_y" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Checkbox Option Image Height</label>
                    <validate>validate-number</validate>
                </field>
                <field id="Checkbox_x" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Checkbox Option Image Width</label>
                    <validate>validate-number</validate>
                </field>
                <field id="Multiple_y" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Multiple Select Option Image Height</label>
                    <validate>validate-number</validate>
                </field>
                <field id="Multiple_x" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Multiple Select Option Image Width</label>
                    <validate>validate-number</validate>
                </field>
            </group>
        </section>
    </system>
</config>